{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "db:generate": {
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "DIRECT_DATABASE_URL",
    "TCP_DATABASE_URL",
    "GITHUB_TOKEN",
    "GITHUB_USERNAME"
  ]
}
