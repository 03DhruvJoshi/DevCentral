    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prisma": "^7.3.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.5",
    "typescript": "5.9.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "class-variance-authority": "^0.7.1",
