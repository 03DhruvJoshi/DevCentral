{
  "name": "devcentral",
  "private": true,
  "prisma": {
    "schema": "./packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest"
  },
  "devDependencies": {
    "@prisma/client": "^7.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^5.0.6",
